@using BrigittaBlazor.Utils
@using BanchoSharp.Interfaces
<MudGrid Spacing="1">
    <MudItem xs="11">
        <ChannelChipList @bind-CurrentlySelectedChannel="@BoundValue"
                         ChannelNotifications="@ChannelNotifications"/>
    </MudItem>
    <MudItem xs="1">
        <HelpWikiButton/>
    </MudItem>
    <MudItem xs="12">
        <MudDivider/>
    </MudItem>
</MudGrid>

@code {
    [Parameter]
    public IChatChannel? CurrentItem { get; set; }
    [Parameter]
    public EventCallback<IChatChannel?> CurrentItemChanged { get; set; }
    [Parameter]
    public Dictionary<string, ChatNotification> ChannelNotifications { get; set; } = null!;
    
    private IChatChannel? BoundValue
    {
        get => CurrentItem;
        set => CurrentItemChanged.InvokeAsync(value);
    }
}